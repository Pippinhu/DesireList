/**index.wxss**/

page {
  background:#000000;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.headline{
  color:#31E9D4;
  font-weight: bold;
  font-size:40rpx;
}

.list{
  margin-top:30rpx;
}

.detail{
  margin-top:40rpx;
  color:#DDDDDD;
  background:#282828;
  width:500rpx;
  height:200rpx;
  display: flex;
  flex-direction:column;
  justify-content: center;
  border-radius: 13rpx;
}

.title{
  font-size:34rpx;
  margin-left:-30rpx;
}

.time{
  font-size:25rpx;
  margin-left:-30rpx;
  color:rgba(255,255,255,0.3)
}

.toDetail{
  font-size:20rpx;
  width:30%;
  margin-top:-70rpx;
  margin-right:20rpx;  
}

.btn{
  position:fixed;
  bottom:0;
  font-size:28rpx;
  margin-top:70rpx;
  margin-bottom:20rpx;
  background-color: #00D99F;
  color:white;
  width:500rpx;
}

.icon{
  position:fixed;
  bottom:100rpx;
  right:70rpx;
  width:80rpx;
  height:80rpx;
}

.listall{
  margin-bottom:40rpx;
}

.tip{
  color:white;
  position: absolute;
  left:50%;  
  top:50%;  
	margin:-50px 0 0 -50px;
}